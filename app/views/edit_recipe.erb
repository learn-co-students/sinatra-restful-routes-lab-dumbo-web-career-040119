<form method="POST" action='/recipes/<%= @recipe.id %>'>
  <input type="hidden" name="_method" value="PATCH"
  <h1>Edit Your Recipe:</h1><br>
  <label for='name'>Name</label>
  <input id="name" type="text" name="recipe[name]" value="<%= @recipe.name %>"/><br>

  <label for='ingredients'>Ingredients</label>
  <input id="ingredients" type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients %>"/><br>

  <label for='cook_time'>Cook Time(min)</label>
  <input id="cook_time" type="number" name="recipe[cook_time]" value="<%= @recipe.cook_time %>"/><br>

  <input type="submit" value="Submit">
</form>
